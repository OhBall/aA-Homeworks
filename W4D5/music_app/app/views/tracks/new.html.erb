<h1>Add a track</h1>

<form class="" action="<%= tracks_url %>" method="post">
  <%= auth_token %>

  <label for="title">Title</label>
  <input class="title" type="text" name="track[title]" value="">
  <br>

  <label for="ord">Ord</label>
  <input class="ord" type="text" name="track[ord]" value="">
  <br>

  <label for="bonus">Bonus Track</label>
  <input class="bonus" type="radio" name="track[bonus?]" value="true">

  <label for="regular">Regular Track</label>
  <input class="regular" type="radio" name="track[bonus?]" value="false">
  <br>

  <label for="lyrics">Lyrics</label>
  <input type="textarea" name="track[lyrics]" value="">
  <br>

  <label for="album">Album</label>
  <select class="album" name="track[album_id]">
    <% Album.all.each do |album| %>
      <option value="<%=album.id%>"><%= album.title %></option>
    <% end %>
  </select>

  <input type="submit" value="Add Track">
</form>
